# Set color cycle: blue, red, green, yellow, violet, gray
axes.prop_cycle : cycler('color', ['0C5DA5', 'FF2C00', '00B945', 'FF9500', '845B97', '474747', '9e9e9e', 'cornflowerblue', 'mediumspringgreen', 'hotpink', 'olive', 'maroon','peru'])

image.cmap : "YlOrBr"

# Fonts
axes.labelsize : 12 # in pt
xtick.labelsize : 10
ytick.labelsize : 10

# x-axis
xtick.direction : in
